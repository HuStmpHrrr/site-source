<!DOCTYPE html>
<html lang="en">

    <head>

        <meta charset="utf-8">
        <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
        <meta name="description" content="">
        <meta name="author" content="">

        <title>{{first}} {{last}}'s Home Page</title>

        <!-- Bootstrap core CSS -->
        <link href="/vendor/bootstrap/css/bootstrap.min.css" rel="stylesheet">

        <!-- Custom fonts for this template -->
        <link href="https://fonts.googleapis.com/css?family=Saira+Extra+Condensed:500,700" rel="stylesheet">
        <link href="https://fonts.googleapis.com/css?family=Muli:400,400i,800,800i" rel="stylesheet">
        <link href="/vendor/fontawesome-free/css/all.min.css" rel="stylesheet">

        <!-- Custom styles for this template -->
        <link href="/css/resume.min.css" rel="stylesheet">

        <style>
         #about #emails > a {
             padding-right: 50px;
         }
         p br {
             display: block;
             margin: 10px 0;
         }
         body p {
             line-height: 1.6;
         }
        </style>

    </head>

    <body id="page-top">

        <nav class="navbar navbar-expand-lg navbar-dark bg-primary fixed-top" id="sideNav">
            <a class="navbar-brand js-scroll-trigger" href="#page-top">
                <span class="d-block d-lg-none">Clarence Taylor</span>
                <span class="d-none d-lg-block">
                </span>
            </a>
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarSupportedContent">
                <ul class="navbar-nav">
                    {% set navItems = [("about", "About"),
                        ("education", "Education"),
                        ("industry", "Industry"),
                        ("others", "Other Info"),
                        ("interests", "Interests")] %}
                    {% for (item, title) in navItems %}
                        <li class="nav-item">
                            <a class="nav-link js-scroll-trigger" href="#{{item}}">{{title}}</a>
                        </li>
                    {% endfor %}
                </ul>
            </div>
        </nav>

        <div class="container-fluid p-0">

            <section class="resume-section p-3 p-lg-5 d-flex d-column" id="about">
                <div class="my-auto">
                    <h1 class="mb-0" style="display: inline; padding-right:20px">{{first}}
                        <span class="text-primary">{{last}}</span>
                    </h1>
                    {% if alias is defined %}
                        <h3 class="mb-1" style="display: inline">
                            a.k.a. {{alias}}
                            <span class="text-primary">{{last}}</span>
                        </h3>
                    {% endif %}
                    <div class="subheading mb-5" id="emails">
                        {% for email in emails %}
                            <a href="mailto:{{email.address}}">{{email.address}}({{email.use}})</a>
                        {% endfor %}
                    </div>
                    <p class="lead mb-5">{{description | replace("\n", "<br/>")}}</p>
                    <div class="social-icons">
                        {% set externals = ["linkedin", "github", "gitlab", "facebook", "twitter"] %}
                        {% for ex in externals if social[ex] is defined %}
                            <a href="{{social[ex]}}">
                                <i class="fab fa-{{ex}}"></i>
                            </a>
                        {% endfor %}
                    </div>
                </div>
            </section>

            <hr class="m-0">

            <section class="resume-section p-3 p-lg-5 d-flex flex-column" id="education">
                <div class="my-auto">
                    <h2 class="mb-5">Education</h2>

                    {% for entry in education %}
                        <div class="resume-item d-flex flex-column flex-md-row mb-5">
                            <div class="resume-content mr-auto">
                                <h3 class="mb-0" style="display: inline; padding-right: 20px">{{entry.school}}</h3>
                                <h4 class="mb=1" style="display: inline">{{entry.location}}</h4>
                                <div class="subheading mb-3">{{entry.degree}}</div>
                                <div>{{entry.subject}}</div>
                                <p>Grade: {{entry.grade}}</p>
                            </div>
                            <div class="resume-date text-md-right">
                                {% set fromStr = "%02d / %d" | format(entry.span.from.month, entry.span.from.year) %}
                                {% if entry.span.to.month is defined %}
                                    {% set toStr = "%02d / %d" | format(entry.span.to.month, entry.span.to.year) %}
                                {% else  %}
                                    {% set toStr = entry.span.to %}
                                {% endif %}
                                <span class="text-primary">{{"%s - %s" | format(fromStr, toStr)}}</span>
                            </div>
                        </div>
                    {% endfor %}
                </div>
            </section>

            <hr class="m-0">

            <section class="resume-section p-3 p-lg-5 d-flex flex-column" id="industry">
                <div class="my-auto">
                    <h2 class="mb-5">Industry</h2>

                    {% for entry in industry %}
                        <div class="resume-item d-flex flex-column flex-md-row">
                            <div class="resume-content mr-auto">
                                <h3 class="mb-0">{{entry.position}}</h3>
                                <div class="subheading mb-3">{{entry.company}}</div>
                                {% if entry.description is defined %}
                                    <p>{{entry.description}}</p>
                                {% endif %}
                            </div>
                            <div class="resume-date text-md-right">
                                {% set fromStr = "%02d / %d" | format(entry.span.from.month, entry.span.from.year) %}
                                {% if entry.span.to.month is defined %}
                                    {% set toStr = "%02d / %d" | format(entry.span.to.month, entry.span.to.year) %}
                                {% else  %}
                                    {% set toStr = entry.span.to %}
                                {% endif %}
                                <span class="text-primary">{{"%s - %s" | format(fromStr, toStr)}}</span>
                            </div>
                        </div>
                    {% endfor %}
                </div>

            </section>

            <hr class="m-0">

            <section class="resume-section p-3 p-lg-5 d-flex flex-column" id="others">
                <div class="my-auto">
                    <h2 class="mb-5">Other Info</h2>

                    <p class="writing mb-0">{{others | replace("\n", "<br/>")}}</p>
                </div>
            </section>

            <hr class="m-0">

            <section class="resume-section p-3 p-lg-5 d-flex flex-column" id="interests">
                <div class="my-auto">
                    <h2 class="mb-5">Interests</h2>
                    <p class="writing mb-0">{{interests | replace("\n", "<br/>")}}</p>
                </div>
            </section>

        </div>

        <!-- Bootstrap core JavaScript -->
        <script src="/vendor/jquery/jquery.min.js"></script>
        <script src="/vendor/bootstrap/js/bootstrap.bundle.min.js"></script>

        <!-- Plugin JavaScript -->
        <script src="/vendor/jquery-easing/jquery.easing.min.js"></script>

        <!-- Custom scripts for this template -->
        <script src="/js/resume.min.js"></script>

    </body>

</html>
